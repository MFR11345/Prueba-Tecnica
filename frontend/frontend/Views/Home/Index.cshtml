@{
    ViewData["Title"] = "Inicio";
    Layout = null; // Si quieres que ocupe toda la pantalla como el login
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inicio - Sistema de Ventas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 30px;
        }

        .dashboard-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            }

        .circle-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-bottom: 1rem;
        }

        .circle-icon-large {
            width: 80px;
            height: 80px;
        }

        .circle-icon-small {
            width: 60px;
            height: 60px;
        }

        .btn-dashboard {
            border-radius: 25px;
            padding: 12px;
            font-weight: 600;
        }

        a {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="dashboard-card p-4 bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h1 class="display-5 fw-bold">
                                <i class="fas fa-store me-2"></i>Sistema de Gestión de Ventas
                            </h1>
                            <p class="lead mb-0">Bienvenido, @Context.Session.GetString("Nombre")!</p>
                            <span class="badge bg-light text-primary mt-2">Sistema activo</span>
                        </div>
                        <div>
                            <i class="fas fa-chart-line fa-4x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estadísticas -->
        <div class="row g-3 mb-4">
            <div class="col-xl-3 col-md-6">
                <a href="@Url.Action("Historial", "Ventas")">
                    <div class="dashboard-card p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-muted small">Ventas Hoy</span>
                                <h3 class="fw-bold text-success mt-1">$2,540</h3>
                                <span class="badge bg-success bg-opacity-10 text-success">
                                    <i class="fas fa-arrow-up me-1"></i>12%
                                </span>
                            </div>
                            <i class="fas fa-dollar-sign fa-2x text-success opacity-50"></i>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-xl-3 col-md-6">
                <a href="@Url.Action("Index", "Productos")">
                    <div class="dashboard-card p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-muted small">Productos</span>
                                <h3 class="fw-bold text-info mt-1">156</h3>
                                <span class="badge bg-info bg-opacity-10 text-info">
                                    <i class="fas fa-plus me-1"></i>5 nuevos
                                </span>
                            </div>
                            <i class="fas fa-box fa-2x text-info opacity-50"></i>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-xl-3 col-md-6">
                <a href="@Url.Action("Index", "Clientes")">
                    <div class="dashboard-card p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-muted small">Clientes</span>
                                <h3 class="fw-bold text-warning mt-1">89</h3>
                                <span class="badge bg-warning bg-opacity-10 text-warning">
                                    <i class="fas fa-user-plus me-1"></i>3 nuevos
                                </span>
                            </div>
                            <i class="fas fa-users fa-2x text-warning opacity-50"></i>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-xl-3 col-md-6">
                <a href="@Url.Action("Index", "Ventas")">
                    <div class="dashboard-card p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <span class="text-muted small">Pedidos</span>
                                <h3 class="fw-bold text-danger mt-1">24</h3>
                                <span class="badge bg-danger bg-opacity-10 text-danger">
                                    <i class="fas fa-clock me-1"></i>Pendientes
                                </span>
                            </div>
                            <i class="fas fa-shopping-cart fa-2x text-danger opacity-50"></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Acciones Rápidas -->
        <div class="row g-3">
            <div class="col-lg-4 col-md-6">
                <div class="dashboard-card p-4 text-center">
                    <div class="circle-icon circle-icon-large bg-primary bg-opacity-10">
                        <i class="fas fa-box fa-2x text-primary"></i>
                    </div>
                    <h5 class="text-primary mb-3">Productos</h5>
                    <p class="text-muted mb-4">Gestiona productos disponibles en el inventario</p>
                    <a href="@Url.Action("Index", "Productos")" class="btn btn-primary btn-dashboard w-100">
                        <i class="fas fa-eye me-2"></i>Ver Productos
                    </a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="dashboard-card p-4 text-center">
                    <div class="circle-icon circle-icon-large bg-success bg-opacity-10">
                        <i class="fas fa-cash-register fa-2x text-success"></i>
                    </div>
                    <h5 class="text-success mb-3">Nueva Venta</h5>
                    <p class="text-muted mb-4">Registra una nueva venta en el sistema</p>
                    <a href="@Url.Action("Nueva", "Ventas")" class="btn btn-success btn-dashboard w-100">
                        <i class="fas fa-plus me-2"></i>Crear Venta
                    </a>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="dashboard-card p-4 text-center">
                    <div class="circle-icon circle-icon-large bg-danger bg-opacity-10">
                        <i class="fas fa-sign-out-alt fa-2x text-danger"></i>
                    </div>
                    <h5 class="text-danger mb-3">Cerrar Sesión</h5>
                    <p class="text-muted mb-4">Salir de manera segura del sistema</p>
                    <a href="@Url.Action("Logout", "Auth")" class="btn btn-danger btn-dashboard w-100">
                        <i class="fas fa-power-off me-2"></i>Cerrar Sesión
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
