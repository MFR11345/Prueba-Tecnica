@model List<frontend.Models.ClienteViewModel>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5.3.3 CSS (CDN oficial) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Clientes</h2>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning text-center">
                No hay clientes disponibles
            </div>
        }
        else
        {
            <div class="table-responsive shadow rounded">
                <table class="table table-bordered table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Id</td>
                                <td>@cliente.Nombre</td>
                                <td>@cliente.Email</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <div class="mt-4 text-center">
            <a href="@Url.Action("Nueva", "Ventas")" class="btn btn-primary me-2">
                + Nueva Venta
            </a>
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                Volver al Inicio
            </a>
        </div>
    </div>

    <!-- Bootstrap 5.3.3 JS Bundle (CDN oficial con Popper incluido) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>
</html>
