@model List<frontend.Models.ProductoViewModel>

@{
    ViewData["Title"] = "Productos";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<h2 class="mb-4 text-primary">
    <i class="fas fa-boxes me-2"></i>Productos Disponibles
</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger shadow-sm">@ViewBag.Error</div>
}

<div class="row">
    @foreach (var producto in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm hover-card border-0">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">@producto.Nombre</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@producto.Precio.ToString("C")</h6>

                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <span class="badge @((producto.Stock > 0) ? "bg-success" : "bg-danger")">
                            <i class="fas fa-box me-1"></i>Stock: @producto.Stock
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info shadow-sm">No hay productos disponibles</div>
}

<style>
    .hover-card {
        transition: all 0.3s ease;
        border-radius: 12px;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }

    .card-title {
        text-transform: capitalize;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.7em;
    }

    .btn-primary {
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
        }
</style>
