@model List<frontend.Models.VentaViewModel>

@{
    ViewData["Title"] = "Historial de Ventas";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
            cursor: pointer;
        }

        .badge-producto {
            font-size: 0.85em;
            margin: 2px;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary"><i class="fas fa-history me-2"></i>Historial de Ventas</h2>
            <div>
                <a href="@Url.Action("Nueva", "Ventas")" class="btn btn-success me-2">
                    <i class="fas fa-plus me-1"></i> Nueva Venta
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                    <i class="fas fa-home me-1"></i> Volver al Inicio
                </a>
            </div>
        </div>

        <!-- Mensajes de alerta -->
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Tabla de ventas -->
        @if (Model != null && Model.Any())
        {
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Ventas Registradas</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                    <th><i class="fas fa-user me-1"></i>Cliente</th>
                                    <th><i class="fas fa-calendar me-1"></i>Fecha</th>
                                    <th><i class="fas fa-dollar-sign me-1"></i>Total</th>
                                    <th><i class="fas fa-boxes me-1"></i>Productos</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var venta in Model.OrderByDescending(v => v.FechaVenta))
                                {
                                    <tr>
                                        <td class="fw-bold">#@venta.VentaId</td>
                                        <td>@venta.ClienteNombre</td>
                                        <td>@venta.FechaVenta.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td class="fw-bold text-success">@venta.Total.ToString("C")</td>
                                        <td>
                                            @if (venta.Detalles != null && venta.Detalles.Any())
                                            {
                                                <div class="d-flex flex-wrap">
                                                    @foreach (var detalle in venta.Detalles)
                                                    {
                                                        <span class="badge bg-info text-dark badge-producto">
                                                            @detalle.ProductoNombre x@(detalle.Cantidad)
                                                        </span>
                                                    }
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-primary">
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">Total General:</td>
                                    <td class="fw-bold">@Model.Sum(v => v.Total).ToString("C")</td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="mt-3 text-muted text-center">
                <small><i class="fas fa-info-circle me-1"></i>Mostrando @Model.Count ventas registradas</small>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No hay ventas registradas</h4>
                    <p class="text-muted">No se encontraron ventas para este cliente.</p>
                    <a href="@Url.Action("Nueva", "Ventas")" class="btn btn-primary mt-2">
                        <i class="fas fa-plus me-1"></i> Crear primera venta
                    </a>
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>